<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DriverRideHistoryActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:theme="@style/NavigationBar"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_bottom" />
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center"-->
<!--        android:text="@string/offline"-->
<!--        android:textSize="32sp"-->
<!--        tools:ignore="MissingConstraints" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="408dp"
        android:layout_height="197dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="?attr/actionBarSize">

        <ImageView
            android:id="@+id/lineLeft"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:paddingLeft="-20dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="20. Oct"
            android:textSize="20sp"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:text="@string/start"
            android:textColor="@color/dark_teal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="4dp"
            android:text="15:30"
            android:textSize="16sp"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="24dp"
            android:text="@string/end"
            android:textColor="@color/dark_teal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="4dp"
            android:text="16:00"
            android:textSize="16sp"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textColor="@color/dark_teal"
            android:textSize="12sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="30 min"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="120dp"
            android:textColor="@color/dark_teal"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-50dp"
            android:src="@drawable/stops" />

        <TextView
            android:id="@+id/start_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="99dp"
            android:layout_marginTop="12dp"
            android:text="Polazna adresa"
            android:textColor="@color/dark_teal"/>
        <TextView
            android:id="@+id/road_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="99dp"
            android:layout_marginTop="38dp"
            android:textSize="13sp"
            android:text="58 km"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:id="@+id/end_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="99dp"
            android:layout_marginTop="61dp"
            android:text="Poslednja adresa"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="600 RSD"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:layout_marginStart="180dp"
            android:textColor="@color/dark_teal"/>

        <TextView
            android:textColor="@color/dark_teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/price"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="180dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="84dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="64dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="44dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_people_alt_24"
            android:layout_gravity="end"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_gravity="end"
            android:layout_marginEnd="34dp"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:textColor="@color/dark_teal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_message_24"
            android:layout_gravity="end"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="84dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>