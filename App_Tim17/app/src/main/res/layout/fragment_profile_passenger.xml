<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activities.DriverAccountActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/teal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:padding="3dp"
                    android:src="@drawable/profile_picture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="@color/yellow"
                    app:strokeWidth="3dp" />

                <TextView
                    android:id="@+id/fullname_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:fontFamily="sans-serif-black"
                    android:includeFontPadding="false"
                    android:text="Taimoor Sikander"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/username_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fullname_field"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:includeFontPadding="false"
                    android:text="taimoor_sikander"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/reportBtn"
                    android:layout_width="69dp"
                    android:layout_height="62dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@color/teal"
                    android:drawableTop="@drawable/ic_baseline_edit_24"
                    />

                <Button
                    android:id="@+id/favRouteBtn"
                    android:layout_width="69dp"
                    android:layout_height="62dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/reportBtn"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="0dp"
                    android:drawableTop="@drawable/ic_baseline_favorite_24"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:paddingHorizontal="30dp"
                android:paddingTop="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/full_name_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    app:boxBackgroundColor="@android:color/transparent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-MAIL"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/yellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                        android:drawablePadding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_number_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    app:boxBackgroundColor="@android:color/transparent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
                        android:drawablePadding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/address_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    app:boxBackgroundColor="@android:color/transparent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_address_24"
                        android:drawablePadding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_bold"
                android:textSize="20sp"
                android:paddingTop="30dp"
                android:gravity="center"
                android:textColor="@color/teal"
                android:text="STATISTICS"
                />

            <com.google.android.material.card.MaterialCardView
                android:clickable="true"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="60dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#fece2f"
                app:cardElevation="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/money_earned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_bold"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Money Earned"
                        android:textColor="@color/teal"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/money_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4.790"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/teal"
                        android:gravity="center"
                        android:textSize="60sp"/>
                    <TextView
                        android:id="@+id/rsd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RSD"
                        android:textColor="@color/teal"
                        android:gravity="center"
                        app:layout_constraintBottom_toTopOf="@id/this_month"
                        android:textSize="26sp"/>
                    <TextView
                        android:id="@+id/this_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal"
                        android:text="This Month"
                        android:fontFamily="@font/outfit_bold"
                        android:textSize="24sp"
                        android:paddingVertical="20dp"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#fece2f"
                app:cardElevation="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/kilometers_crossed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_bold"
                        android:gravity="center"
                        android:paddingVertical="20dp"
                        android:text="Kilometers Driven"
                        android:textColor="@color/teal"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/kilometers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="47,2"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/teal"
                        android:gravity="center"
                        android:textSize="60sp"/>
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/teal"
                        android:gravity="center"
                        app:layout_constraintBottom_toTopOf="@id/this_week"
                        android:textSize="26sp"/>
                    <TextView
                        android:id="@+id/this_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal"
                        android:text="This Week"
                        android:fontFamily="@font/outfit_bold"
                        android:textSize="24sp"
                        android:paddingVertical="20dp"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>